<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/item_cho_meo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:elevation="5dp"
    android:padding="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/purple_500"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/khung"
            android:background="#F4E386"
            >
            <TextView
                android:id="@+id/tv_ten_cho_meo"
                style="@style/cardViewText"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Tên Pet"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_pet"
            android:layout_width="119dp"
            android:layout_height="98dp"
            android:layout_below="@id/khung"
            android:src="@drawable/ic_round_calendar_today_24"/>
        <TextView
            android:id="@+id/tvgiapet1"
            style="@style/cardViewText"
            android:layout_below="@+id/khung"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="10dp"
            android:text="Giá: "
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_giapet"
            style="@style/cardViewText"
            android:layout_below="@+id/khung"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/tvgiapet1"
            android:text="20000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_maulong1"
            style="@style/cardViewText"
            android:layout_below="@+id/tv_giapet"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="13dp"
            android:text="Màu lông: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_maulong"
            style="@style/cardViewText"
            android:layout_below="@+id/tv_giapet"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="13dp"
            android:text="Màu lông "
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_chitiet1"
            style="@style/cardViewText"
            android:layout_below="@+id/tv_maulong"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="123dp"
            android:layout_marginTop="13dp"
            android:text="Chi tiết: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_chitietpet"
            style="@style/cardViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_maulong"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="16dp"
            android:text="Chi tiết"
            android:textSize="20sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>