<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/phieumuon_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:elevation="5dp"
    android:padding="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:background="@color/light_orange"
    app:cardBackgroundColor="@color/purple_500"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_orange">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/khung"
            android:layout_marginBottom="8dp"
            android:background="#F4E386"
            >
            <TextView
                android:id="@+id/tv_tensp_hoadon"
                style="@style/cardViewText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="Tên Thành Viên"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"


                >

                <ImageView
                    android:id="@+id/phieumuon_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginVertical="4dp"
                    />

            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvNgay1"
            android:text="Ngày Mua: "
            android:layout_marginVertical="8dp"

            style="@style/cardViewText"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/khung"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tvngaynua_hoadon"
            style="@style/cardViewText"
            android:layout_width="189dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/khung"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="146dp"
            android:layout_marginVertical="8dp"
            android:layout_toRightOf="@+id/tvNgay1"
            android:text="20/10/2020"
            android:textColor="#2962FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_loai1"
            android:text="Loại Sản Phẩm: "
            style="@style/cardViewText"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvngaynua_hoadon"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_loai_hoadon"
            style="@style/cardViewText"

            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvngaynua_hoadon"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="146dp"
            android:layout_marginVertical="8dp"
            android:layout_toRightOf="@+id/tv_loai1"
            android:text="Tên Sách "
            android:textColor="#2962FF"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_tienThue1"
            android:text="Tiền: "
            style="@style/cardViewText"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_loai_hoadon"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_gia_hoadon"
            style="@style/cardViewText"
            android:layout_width="188dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/tv_loai1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="146dp"
            android:layout_marginVertical="8dp"
            android:layout_toRightOf="@+id/tv_tienThue1"

            android:text="tien "
            android:textColor="#2962FF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tentt1"
            android:text="Tên người mua: "
            style="@style/cardViewText"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_tienThue1"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="16dp"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/tv_tenkh"
            style="@style/cardViewText"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tienThue1"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="146dp"
            android:layout_marginVertical="8dp"
            android:layout_toRightOf="@+id/tv_tentt1"
            android:text="Tên Khách Hàng: "
            android:textColor="#2962FF"
            android:textSize="20sp" />




    </RelativeLayout>

</androidx.cardview.widget.CardView>