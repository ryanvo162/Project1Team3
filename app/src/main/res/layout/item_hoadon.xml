<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_hoadon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="20dp"
    android:backgroundTint="@color/light_orange"
    android:elevation="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/linear_hd"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="60dp">

        <TextView
            android:id="@+id/tv_tensp_hoadon"
            style="@style/cardViewText"
            android:fontFamily="@font/montserrat"
            android:text="Tên Sản Phẩm"
            android:textColor="@color/black_app"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNgay1"
                style="@style/cardViewText"
                android:textColor="@color/black_app"
                android:text="Ngày Mua: " />

            <TextView
                android:id="@+id/tvngaynua_hoadon"
                style="@style/cardViewText"
                android:text="20/10/2020"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_loai1"
                style="@style/cardViewText"
                android:textColor="@color/black_app"
                android:text="Loại Sản Phẩm: " />

            <TextView
                android:id="@+id/tv_loai_hoadon"
                style="@style/cardViewText"
                android:text="Tên Sách " />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tienThue1"
                style="@style/cardViewText"
                android:textColor="@color/black_app"
                android:text="Tiền: " />

            <TextView
                android:id="@+id/tv_gia_hoadon"
                style="@style/cardViewText"
                android:text="31000" />

            <TextView
                style="@style/cardViewText"
                android:text=" VND"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tentt1"
                style="@style/cardViewText"
                android:textColor="@color/black_app"
                android:text="Người mua: " />

            <TextView
                android:id="@+id/tv_tenkh"
                style="@style/cardViewText"
                android:text="Ryan Võ" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>