<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/guest_item_cho_meo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="5dp"
    android:padding="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/purple_500"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_guest_pet"
            android:layout_width="182dp"
            android:layout_height="163dp"
            android:layout_below="@id/khung"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:src="@drawable/ic_round_calendar_today_24" />
        <TextView
            android:id="@+id/tv_guest_tenpet"
            style="@style/cardViewText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Tên Pet"
            android:textSize="20sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvgiapet1"
                style="@style/cardViewText"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:text="Giá: "
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_guest_giapet"
                style="@style/cardViewText"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="8dp"
                android:paddingHorizontal="8dp"

                android:text="20000"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_maulong1"
                style="@style/cardViewText"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="Màu lông: "
                android:textSize="20sp" />

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:id="@+id/tv_guest_maulong"
                style="@style/cardViewText"
                android:paddingHorizontal="8dp"
                android:gravity="center_horizontal"
                android:text="Màu lông "
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:padding="8dp"
            android:id="@+id/tv_guest_chitietpet"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>