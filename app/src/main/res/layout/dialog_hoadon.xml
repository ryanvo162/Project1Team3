<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingTop="56dp"
        android:paddingRight="36dp"
        android:paddingBottom="56dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTV"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                app:helperText="Loại sản phẩm"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spinner_loaisp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="Chọn thành viên"
                    android:completionHint="Chọn thành viên" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                app:helperText="Tên sản phẩm"
                android:layout_height="wrap_content"
                android:id="@+id/tilSach">
                <Spinner
                    android:id="@+id/spinner_tensp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:completionHint="Chọn sách"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_gia_hoadon"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                app:helperText="Giá sản phẩm"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dialog_gia_hoadon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:hint="Gia"
                    android:completionHint="Chọn thành viên"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                app:helperText="Tên Khách Hàng"
                android:layout_height="wrap_content"
                android:id="@+id/tilkh">
                <Spinner
                    android:id="@+id/spinner_kh"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvngaymua"
                android:text="5/10/2020"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivngay"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ic_round_calendar_today_24"
                android:layout_width="40dp"
                android:layout_height="30dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pm_btnCancel_hoadon"
                android:background="@drawable/round_background_button"

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Cancel" />

            <Button
                android:id="@+id/pm_btnOK_hoadon"
                android:layout_width="100dp"
                android:background="@drawable/round_background_button"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="OK"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>