<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTV"
        style="@style/textInputLayout"
        app:helperText="Loại sản phẩm">

        <Spinner
            android:id="@+id/spinner_loaisp"
            style="@style/editText"
            android:completionHint="Chọn thành viên"
            android:gravity="center"
            android:hint="Chọn thành viên" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSach"
        style="@style/textInputLayout"
        app:helperText="Tên sản phẩm">

        <Spinner
            android:id="@+id/spinner_tensp"
            style="@style/editText"
            android:completionHint="Chọn sách"
            android:completionThreshold="1"
            android:gravity="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_gia_hoadon"
        style="@style/textInputLayout"
        app:helperText="Giá sản phẩm">

        <TextView
            android:id="@+id/dialog_gia_hoadon"
            style="@style/editText"
            android:completionHint="Chọn thành viên"
            android:gravity="center"
            android:hint="Giá" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilkh"
        style="@style/textInputLayout"
        app:helperText="Tên Khách Hàng">

        <Spinner
            android:id="@+id/spinner_kh"
            style="@style/editText"
            android:completionThreshold="1"
            android:gravity="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_sdt_hoadon"
        style="@style/textInputLayout"
        app:helperText="SĐT">

        <TextView
            android:id="@+id/dialog_sdt_hoadon"
            style="@style/editText"
            android:completionHint="SĐT khách hàng"
            android:gravity="center"
            android:hint="SĐT khách hàng" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        style="@style/textInputLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvngaymua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_weight="0.8"
            android:text="2021/1/1"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivngay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/ic_round_calendar_today_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pm_btnCancel_hoadon"
            style="@style/buttonApp"
            android:layout_margin="16dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/pm_btnOK_hoadon"
            style="@style/buttonApp"
            android:layout_margin="16dp"
            android:text="OK" />

    </LinearLayout>
</LinearLayout>