<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#244233"
    android:scrollbars="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="250dp"
        android:src="@drawable/bg_tk_frg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/tai_khoan"
                android:gravity="center"
                android:layout_marginTop="48dp"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="150dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvTen"
                    android:gravity="center"
                    android:text="UserName"
                    android:layout_marginTop="12dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvLoaiTK"
                    android:text="Administrator"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp"
                    android:textColor="#C69700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btntaoTK"
            android:text="Tạo tài khoản"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="21sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_taikhoan"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="40dp"
            />

        <Button
            android:id="@+id/btndoipass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="21sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_taikhoan"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"
            android:text="Đổi mật khẩu"/>

        <Button
            android:id="@+id/btnThoat"
            android:text="Đăng xuất"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="21sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="center"
            android:background="@drawable/custom_button_taikhoan"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
